# Command used to launch lite from src/
LITE_CMD="./packages/lite/bin/start.js"

# Bind host / port used by lite (HOST can be localhost, 127.0.0.1, etc.)
LITE_HOST="localhost"
# Leave blank to auto-select a free port.
LITE_PORT=""

# Optional auth token used by lite. Leave blank for no auth.
LITE_AUTH_TOKEN=""

# Isolated HOME for this daemon instance (keeps state separate from other cocalc-lite servers)
LITE_HOME="$HOME/scratch/cocalc-lite2-lite-daemon"

# Path written by lite with startup metadata (pid/port/url/token).
# Keep this daemon-local to avoid cross-server conflicts.
LITE_CONNECTION_INFO="$HOME/scratch/cocalc-lite2-lite-daemon/connection-info.json"

# Optional extra debug namespace(s), e.g. cocalc:*
LITE_DEBUG=""

# Optional explicit node binary path, e.g. /home/user/.nvm/versions/node/v22.*/bin/node
LITE_NODE_BIN=""

# Optional override for daemon stdout log
# LITE_STDOUT_LOG="/home/user/build/cocalc-lite2/src/.local/lite-daemon/lite.stdout.log"
