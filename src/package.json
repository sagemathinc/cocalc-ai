{
  "name": "cocalc",
  "version": "1.0.0",
  "description": "CoCalc: Collaborative Calculation",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "make": "pnpm run build",
    "make-dev": "pnpm run build-dev",
    "build": "./workspaces.py install && ./workspaces.py build && pnpm python-api",
    "build-dev": "./workspaces.py install && ./workspaces.py build --dev && pnpm python-api",
    "build-dev-force": "./workspaces.py install && ./workspaces.py build --dev --force && pnpm python-api",
    "build-lite-dev": "./workspaces.py install && ./workspaces.py build --dev --exclude=hub,server,next,file-server",
    "clean": "rm -rf packages/node_modules && ./workspaces.py clean ",
    "hub": "pnpm --dir packages/hub app",
    "hub:postgres": "pnpm --dir packages/hub app:postgres",
    "hub:pglite": "pnpm --dir packages/hub app:pglite",
    "hub:daemon:init": "bash ./scripts/dev/hub-daemon.sh init",
    "hub:daemon:start": "bash ./scripts/dev/hub-daemon.sh start",
    "hub:daemon:stop": "bash ./scripts/dev/hub-daemon.sh stop",
    "hub:daemon:restart": "bash ./scripts/dev/hub-daemon.sh restart",
    "hub:daemon:status": "bash ./scripts/dev/hub-daemon.sh status",
    "hub:daemon:logs": "bash ./scripts/dev/hub-daemon.sh logs",
    "smoke:self-host": "bash ./scripts/dev/self-host-smoke.sh",
    "static": "cd packages/static && pnpm watch",
    "static:prod": "cd packages/static && pnpm build",
    "version-check": "cd packages && pnpm check-deps",
    "check-doc-urls": "cd scripts; python3 check_doc_urls.py",
    "check-all-urls": "cd scripts; python3 check_doc_urls.py --all --react",
    "test": "unset DEBUG && pnpm check-doc-urls && pnpm run depcheck && pnpm run version-check && ./workspaces.py test",
    "depcheck": "cd packages && pnpm run -r --workspace-concurrency=4 depcheck",
    "python-api": "cd python/cocalc-api && PATH=$HOME/.local/bin:$PATH make all",
    "lint:py": "mypy packages/server/cloud/bootstrap/bootstrap.py",
    "tsc": "cd packages && pnpm tsc:build",
    "tsc:watch": "cd packages && pnpm tsc:watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sagemathinc/cocalc"
  },
  "keywords": [
    "python",
    "sage",
    "sagemath",
    "latex",
    "terminal",
    "web",
    "ide",
    "math",
    "mathematics"
  ],
  "author": "SageMath, Inc.",
  "license": "SEE LICENSE.md",
  "bugs": {
    "url": "https://github.com/sagemathinc/cocalc/issues"
  },
  "homepage": "https://github.com/sagemathinc/cocalc",
  "dependencies": {
    "lru-cache": "^7.18.3"
  }
}
