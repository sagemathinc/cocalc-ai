    "rootDir": "./",
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["es5", "es6", "es2017", "dom"]
  },
  "exclude": [
    "dist",
    "node_modules",
    "account/test",
    "jupyter/test",
    "app-framework/__tests__/",
    "frame-editors/generic/mocha-tests",
    "frame-editors/settings/__tests__",
    "jupyter/output-messages/__test__",
