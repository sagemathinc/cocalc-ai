{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@cocalc/backend": ["../backend"],
      "@cocalc/backend/*": ["../backend/*"],
      "@cocalc/conat": ["../conat"],
      "@cocalc/conat/*": ["../conat/*"],
      "@cocalc/database": ["../database"],
      "@cocalc/database/*": ["../database/*"],
      "@cocalc/server": ["../server"],
      "@cocalc/server/*": ["../server/*"],
      "@cocalc/util": ["../util"],
      "@cocalc/util/*": ["../util/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"],
  "references": [
    { "path": "../backend" },
    { "path": "../conat" },
    { "path": "../database" },
    { "path": "../server" },
    { "path": "../util" }
  ]
}
